pipeline {
    parameters{
    	choice(name: 'choice', choices: ['build', 'teste'], description: 'Qual o stage pรก?')
    }
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage('build') {
	 steps {
	  sh 'echo build'	
	 }
	 }
	 stage('teste') {
	 	steps {
	 	sh 'echo teste'
	}
    }
}
}
