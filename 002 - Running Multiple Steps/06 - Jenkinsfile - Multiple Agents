pipeline {
    agent none
    stages {
        stage('Maven Build') {
            agent { 
                docker {
                    image 'maven:3.8.7-eclipse-temurin-11' 
                } 
             }
            steps {
                echo 'Hello, Maven'
                sh 'mvn --version'
            }
        }
        stage('npm Build') {
            agent { 
                docker {
                    image 'npm:latest' 
                } 
            }
            steps {
                echo 'Hello, npm'
                sh 'npm --version'
            }
        }
    }
}
