pipeline {
    agent none
    stages {
        stage('Maven Build') {
            agent { docker 'maven:3.8.7-eclipse-temurin-11' } 
            steps {
                echo 'Hello, Maven'
                sh 'mvn --version'
            }
        }
        stage('NGM Build') {
            agent { npm 'npm:latest' } 
            steps {
                echo 'Hello, ngm'
                sh 'npm --version'
            }
        }
    }
}
